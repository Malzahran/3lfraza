<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:background="@color/White"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ActivitySignIn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_bg" />


        <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
            android:id="@+id/loader"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="@dimen/dimen_20"
            android:padding="10dp"
            android:src="@drawable/ic_logo"
            app:cfl_border="true"
            app:cfl_border_width="6dp"
            app:cfl_progress="80"
            app:cfl_wave_amplitude="0.06"
            app:cfl_wave_color="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_face"
                android:drawableStart="@drawable/ic_facebook"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/login_facebook"
                android:textAlignment="center"
                android:textColor="@drawable/text_white"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_google"
                android:drawableStart="@drawable/ic_google"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/login_google"
                android:textColor="@drawable/text_white"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_dark"
                android:drawableStart="@drawable/ic_home"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/home"
                android:textColor="@drawable/text_white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_dark"
                    android:drawableStart="@drawable/ic_login"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textAlignment="center"
                    android:textColor="@drawable/text_white"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_dark"
                    android:drawableStart="@drawable/ic_register"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/register_sh"
                    android:textAlignment="center"
                    android:textColor="@drawable/text_white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>